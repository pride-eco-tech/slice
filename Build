pipeline {
    agent any

    stages 
	{
        stage('Build') 
		{
            steps 
			{
                echo 'Build app'
            }
        }
		stage('Test') 
		{
            steps 
			{
                echo 'Test app'
            }
        }
		stage('Deploy') 
		{
            steps 
			{
                echo 'deploy app'
            }
        }
		
    }
	
	post 
	{
	
        always
		{
            emailext body: 'Summary', subject: 'Pipeline Status', to: 'abhishekkompelli22@gmail.com'
		}		
	}
}
